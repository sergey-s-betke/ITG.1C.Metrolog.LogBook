\@object@class@def{ДолжностноеЛицо}{
	\@property*{Должность}
	\@property{Фамилия}
	\@property*{Инициалы}
	%\@property{СертификатКлюча}
}

\@object@class@def\УдостоверениеЗаписи{
	\@member\ДолжностноеЛицо
	%\@property{ПодписьЭЦП}
	\@property*\Дата % нет в ГОСТ 2.612
}

\@object@class@def{Организация}{
	\@property{Наименование}
	\@property*{ПочтовыйАдрес}
	\@property*{АдресСайта}
	\@property{ВидОрганизации}[эксплуатирующая организация]
	\@property*{Подразделение} % только для ЛУ, нет в ГОСТ 2.612
}

\@object@class@def{Формуляр}{
	% реквизиты формуляра
	\@property*{Часть}
	% данные об организации, эксплуатирующей эталон в настоящее время
	% и оформляющей формуляр
	\@member\Организация of class \Организация % в поле 1 титульного листа
	% реквизиты листа утверждения, и титульного листа так же, если он использован в роли ЛУ
	%\@member\УдостоверениеЗаписи
	\@objects{Разработал}{
		\@member{ДолжностноеЛицо} of class {ДолжностноеЛицо}
		\@property*{Дата}
	}
	\@object{Проверил}{
		\@member{ДолжностноеЛицо} of class {ДолжностноеЛицо}
		\@property*{Дата}
	}
	\@objects{Согласовал}{
		\@member{ДолжностноеЛицо} of class {ДолжностноеЛицо}
		\@property*{Дата}
	}
	\@object{МетрологическийКонтроль}{
		\@member{ДолжностноеЛицо} of class {ДолжностноеЛицо}
		\@property*{Дата}
	}
	\@object{Нормоконтроль}{
		\@member{ДолжностноеЛицо} of class {ДолжностноеЛицо}
		\@property*{Дата}
	}
	\@object{Утвердил}{
		\@member{ДолжностноеЛицо} of class {ДолжностноеЛицо}
		\@property*{Дата}
	}
	% реквизиты изделия
	\@object{Изделие}{
		\@property{Наименование}
		\@property{Обозначение}
		\@property*{УсловноеОбозначение}
		\@property{Номер} % заводской номер
		\@property*{КонтрольныйНомер}
		\@property*{КодОКП} % нет в ГОСТ 2.612
	}
