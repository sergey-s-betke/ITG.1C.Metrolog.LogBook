\@object@class@def \ДолжностноеЛицо{
	\@property* \Должность
	\@property \Фамилия
	\@property* \Инициалы
	%\@property\СертификатКлюча
}

\@object@class@def \УдостоверениеЗаписи{
	\@member \ДолжностноеЛицо of class \ДолжностноеЛицо
	%\@property \ПодписьЭЦП
	\@property* \Дата % нет в ГОСТ 2.612
}

\@object@class@def \Организация{
	\@property \Наименование
	\@property* \ПочтовыйАдрес
	\@property* \АдресСайта
	\@property \ВидОрганизации[эксплуатирующая организация]
	\@property* \Подразделение % только для ЛУ, нет в ГОСТ 2.612
}

\@object@class@def \Характеристика{
	\@property \Наименование
%	\@property \Значение
%	\@property \ЕдиницаИзмерения % по ГОСТ 8.417
	\@member \Значение of class \Величина % не по ГОСТ 2.612
	\@property \Признак[номинальный] % номинальный, фактический, измеренный
	\@property* \ПредельноеОтклонение % без единицы измерения, я так понимаю, только знак +/- и число
	\@property* \Отношение % не по ГОСТ 2.612: "<=" (не более), ">=" (не менее)
}

\@object@class@def \СведенияОСертификате{
	\@property \Номер
	\@property \СрокДействия
	\@property \ВыдавшийОрган
	\@property \Документ
}

\@object@class@def \ДанныеОСроке{
	\@property \ПризнакСрока[установленный] % установленный, гарантийный
	\@property \ВидСрока % службы, хранения, действия, выполнения
}

\@object@class@def \Документ{
	\@property \НомерДокумента
	\@property* \Обозначение
	\@property \Наименование
	\@property* \ВидДокумента % бюллетень, указание, приказ, распоряжение
	\@property \Дата
}

\@object@class@def \Действие{
	\@property \НаименованиеДействия
	\@property* \ЦельДействия % по ГОСТ 2.601
	\@property* \КраткоеСодержаниеДействия
}

\@object@class@def \ЗаключениеПроверяющего{
	\@property* \Номер % нет в ГОСТ 2.612, но для ссылки из \УстранениеЗамечания ввёл
	\@property \Формулировка
	\@property \Оценка % неудовлетворительно, удовлетворительно, хорошо, отлично
}

\@object@class@def \УстранениеЗамечания{
	\@property \СсылочнаяЗапись % номер записи с замечанием (понимаю - записи \ЗаключениеПроверяющего)
	\@member \УдостоверениеЗаписи of class \УдостоверениеЗаписи
}

\@object@class@def \СредствоИзмерения{ % нет в ГОСТ 2.612
	\@property \ТипСИ
	\@property \НомерГРСИ
	\@member* \СвидетельствоОРегистрацииТипаСИ of class \СведенияОСертификате
}

\@object@class@def \Величина{ % нет в ГОСТ 2.612
	\@property \Значение % \todo для значения необходимо указывать его точность, количество значащих цифр в мантиссе
	\@property \ЕдиницаИзмерения % по ГОСТ 8.417
}

\@object@class@def \ДиапазонВеличин{ % нет в ГОСТ 2.612
	\@member \Начало of class \Величина
	\@member \Конец of class \Величина
}

\@object@class@def \МетрологическаяХарактеристика{ % нет в ГОСТ 2.612
	\@property \МетрологическаяХарактеристика % \todo необходимо определить правила указания метрологической характеристики
	\@property* \Наименование
	\@member \Значение of class \Величина % формула, именно формула в tex формате
	\@member* \ВДиапазонеИзмерений of class \ДиапазонВеличин
	\@property \Категория[основная] % основная, вспомогательная (выводить на печать / не выводить на печать)
}

\@object@class@def \КаналИзмерений{ % нет в ГОСТ 2.612, собственная трактовка характеристик для СИ
	\@property \Наименование
	\@member \Диапазон of class \ДиапазонВеличин
	\@property* \ФизическаяВеличина % \todo необходимо определить правила указания физической величины
	\@collection \НормируемаяМетрологическаяХарактеристика of class \МетрологическаяХарактеристика
}


\@object@class@def \Формуляр{
	% данные об организации, эксплуатирующей эталон в настоящее время
	% и оформляющей формуляр
	\@member \Организация of class \Организация % в поле 1 титульного листа
	% реквизиты листа утверждения, и титульного листа так же, если он использован в роли ЛУ
	\@collection \Разработал of class \УдостоверениеЗаписи
	\@member* \Проверил of class \УдостоверениеЗаписи
	\@collection \Согласовал of class \УдостоверениеЗаписи
	\@member* \МетрологическийКонтроль of class \УдостоверениеЗаписи
	\@member* \Нормоконтроль of class \УдостоверениеЗаписи
	\@member* \Утвердил of class \УдостоверениеЗаписи
	% реквизиты изделия
	\@object \ИдентификационныеДанные{
		\@object \Изделие{
			\@property \Наименование
			\@property \Обозначение
			\@property* \УсловноеОбозначение
			\@property \Номер[отсутствует] % заводской номер
			\@property* \КонтрольныйНомер
			\@property* \КодОКП % нет в ГОСТ 2.612
		}
		\@member \Производитель of class \Организация % нет в ГОСТ 2.612
		\@property \ДатаИзготовления[не указана] % нет в ГОСТ 2.612
		\@member \СредствоИзмерения of class \СредствоИзмерения % нет в ГОСТ 2.612
	}
	\@object \ОсновныеТехническиеДанные{
		\@collection \Характеристика of class \Характеристика
		\@collection \КаналИзмерений of class \КаналИзмерений % нет в ГОСТ 2.612
	}
	\@object \Документация{
		\@member* \РЭ of class \Документ
		\@member* \ТУ of class \Документ
		\@member* \ОТ of class \Документ
		\@member* \МП of class \Документ
		\@collection \Прочая of class \Документ
	}
}
