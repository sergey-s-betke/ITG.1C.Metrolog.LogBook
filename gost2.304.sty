\tl_const:Nn \c__eskdfont_slant_tl { 0.258819 } % cos 75 градусов
\tl_new:N \g__eskdfont_keyval_tl % fontspec параметры семейства шрифтов
\tl_gset:Nn \g__eskdfont_keyval_tl
  {
    NFSSFamily = \c_eskdfont_tl,
    Path = fonts/,
    Extension = .ttf,
    UprightFont = \c__eskdfont_type_A_tl,
    OpticalSize = 0,
    Mapping = tex-text,
    Scale = 1,
    FontAdjustment =
      {
      },
    UprightFeatures =
      {
        Font = \c__eskdfont_type_A_tl
      },
    SlantedFeatures =
      {
        Font = \c__eskdfont_type_A_tl,
        FakeSlant = \c__eskdfont_slant_tl
      },
    BoldFeatures =
      {
        Font = \c__eskdfont_type_B_tl,
        Scale = \g__eskdfont_type_B_scale_tl
      },
    BoldSlantedFeatures =
      {
        Font = \c__eskdfont_type_B_tl,
        FakeSlant = \c__eskdfont_slant_tl,
        Scale = \g__eskdfont_type_B_scale_tl
      }
    %Kerning = On, % not avaliable for ttf fonts
    %Numbers = Uppercase, % not avaliable in font
  }

% определяем масштаб для шрифта
% 1ex = c, h = 14/10 c (или 10/7 c для шрифта типа Б)
% 1em = кегль шрифта (\f@size)
\group_begin:
  \fontspec \c_eskdfont_tl [\g__eskdfont_keyval_tl] \fontsize { 100pt } { 100pt } \selectfont
  \tl_const:Nx \c__eskdfont_fontscale_tl
    { \dim_to_decimal:n { 1pt * \dim_ratio:nn { 10em } { 14ex } } }
  \dim_set:Nn \l_tmpa_dim {1ex}
  \bfseries
  \tl_gset:Nx \g__eskdfont_type_B_scale_tl
    { \dim_to_decimal:n { 1pt * \dim_ratio:nn \l_tmpa_dim { 1ex } } }
\group_end:

